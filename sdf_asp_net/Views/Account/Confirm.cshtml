
@{
    ViewBag.Title = "Eine bestätigung E-mail wurde zu dieser E-mail adresse gesendet : ";
}

<style type="text/css">
    .message{
        color:red;
    }
</style>
<h2>@ViewBag.Title  @ViewBag.Email</h2>

<div class="row">
    <div class="col-md-8">

        @using (Html.BeginForm("Confirm", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-8">
                
                <h4 class="message"> Bitte checken Sie Ihre Posteingang  </h4>
            </div>
        }
    </div>

</div>

